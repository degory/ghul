{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ghul",
	"patterns": [
		{
			"name": "comment.ghul",
			"match": "//.*$"
		},
		{
			"name": "delimiter.ghul",
			"match": "\\(|\\)"
		},
		{
			"name": "constant.language.ghul",
			"match": "\\b(null|true|false)\\b"
		},
		{
			"name": "constant.numeric.ghul",
			"match": "\\b([0-9]+)\\b"
		},
		{
			"name": "keyword.type_expression.ghul",
			"match": "(=>|->|:)"
		},
		{
			"name": "storage.modifier.ghul",
			"match": "\\b(static|public|protected|private|var|let)\\b"
		},
		{
			"name": "entity.name.function.ghul",
			"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)(?=\\s*\\()"
		},		
		{
			"name": "entity.name.type_expression.ghul",
			"match": "\\b([A-Z][a-zA-Z0-9_]*)\\b"
		},		
		{
			"name": "keyword.operator.ghul",
			"match": "(!|\\$|%|\\^|&|\\*|-|\\+|=|\\||@|~|#|\\\\|<|>|\\.|\\?|\\/|\\*)+"
		},
		{
			"name": "keyword.other.ghul",
			"match": "\\b(new|cast|isa|namespace|class|trait|enum|use|is|si)\\b"
		},				
		{
			"name": "entity.name.type_expression.ghul",
			"match": "\\b(void|bool|byte|ubyte|short|ushort|int|uint|long|ulong|word|uword|char)\\b"
		},		
		{
			"name": "keyword.control.ghul",
			"match": "\\b(if|then|elif|else|fi|for|in|while|do|od|continue|break|case|when|default|esac|throw|try|catch|finally|yrt|return)\\b"
		},
		{
			"name": "variable.other.ghul",
			"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b"
		},		
		{
			"include": "#strings"
		}
	],
	"repository": {
		"strings": {
			"name": "string.quoted.double.ghul",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.ghul",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.ghul"
}