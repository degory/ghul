{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ghul",
	"patterns": [
		{
			"name": "delimiter.ghul",
			"match": "\\(|\\)"
		},
		{
			"name": "keyword.type.ghul",
			"match": "(=>|->|:)"
		},				
		{
			"name": "storage.modifier.ghul",
			"match": "\\b(static|public|protected|private)\\b"
		},				
		{
			"name": "keyword.operator.ghul",
			"match": "(!|\\$|%|\\^|&|\\*|-|\\+|=|\\||@|~|#|\\\\|<|>|\\.|\\?|\\/|\\*)+"
		},
		{
			"name": "keyword.other.ghul",
			"match": "\\b(new|cast|isa)\\b"
		},				
		{
			"name": "entity.name.type.ghul",
			"match": "\\b(void|bool|char|short|ushort|int|uint|long|ulong|word|uword)\\b"
		},		
		{
			"name": "keyword.control.ghul",
			"match": "\\b(var|let|if|then|elif|else|fi|for|while|do|od|continue|break|namespace|class|interface|trait|is|si|case|when|default|esac|throw|try|catch|finally|yrt|return|namespace|use)\\b"
		},
		{
			"name": "entity.name.variable.ghul",
			"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.keyword.ghul",
					"match": "test"
				},
				{
					"name": "keyword.operator.ghul",
					"match": "\\b(var|let|if|then|elif|else|fi|for|while|do|od|continue|break|namespace|class|interface|is|si|case|when|default|esac|try|catch|finally|yrt|return)\\b"
				}		
			]
		},
		"strings": {
			"name": "string.quoted.double.ghul",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.ghul",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.ghul"
}