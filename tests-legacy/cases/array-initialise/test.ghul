namespace Test.SimpleOperators is
    class Main is
        init() is
            var ia: int[][];

            // initialising array from literal implies new
            ia = [[6,7],[8,9,10],[11,12,13,14]];

            
            if ia.length == 3 then
                System.Console.error.write_line("expected ia.length == 3");
            else
                System.Console.error.write_line("not expected aa.length != 3");
            fi

            if ia[0].length == 2 then
                System.Console.error.write_line("expected ia[0].length == 2");
            else
                System.Console.error.write_line("not expected aa.length != 2");
            fi

            if ia[2].length == 4 then
                System.Console.error.write_line("expected ia[2].length == 4");
            else
                System.Console.error.write_line("not expected aa.length != 4");
            fi
          
            // nesting order is [outer array][inner array]
            if ia[2][3] == 14 then
                System.Console.error.write_line("expected ia[2][3]  == 14");
            else
                System.Console.error.write_line("not expected ia[2][3]  != 14");
            fi

            // assign

            ia[2][3] = 27;
            if ia[2][3] == 27 then
                System.Console.error.write_line("expected ia[2][3]  ==27");
            else
                System.Console.error.write_line("not expected ia[2][3]  != 27");
            fi
        si 
    si
si