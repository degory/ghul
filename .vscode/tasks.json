{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build compiler for legacy target",
            "command": "./build/type-check.sh && ./build/build.sh",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$ghūl"
        },
        {
            "label": "Build compiler for .NET target",
            "command": "./build/build-dotnet.sh",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$ghūl"
        },
        {
            "label": "Bootstrap compiler for legacy target",
            "command": "./build/bootstrap.sh",
            "type": "shell",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Run all tests under Mono",
            "command": "./tests/test.sh",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Run all tests under .NET",
            "command": "CLI_RUNNER=dotnet ./tests/test.sh",
            "type": "shell",
            "group": "test"
        },
        {
            "label": "Create new test",
            "group": "test",
            "command": "./tests/create.sh",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Edit all failed tests",
            "group": "test",
            "command": "./tests/edit-failed.sh",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}