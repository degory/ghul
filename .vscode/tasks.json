{
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build",
            "command": "./dev-build.sh",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": [
                    {
                        // tests/simple-variables.l 9,1..9,21:
                        "regexp": "^(.*):\\s+(\\d+),(\\d+)\\.\\.(\\d+),(\\d+):\\s+(info|warn|error):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "endLine": 4,
                        "endColumn": 5,
                        "severity": 6,
                        "message": 7
                    }
                ]
            }
        },
        {
            "taskName": "test",
            "command": "./dev-test.sh '${file}'",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },            
            "problemMatcher": {
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}/test"
                ],
                "pattern": [
                    {
                        // tests/simple-variables.l 9,1..9,21:
                        "regexp": "^([^<>].*):\\s+(\\d+),(\\d+)\\.\\.(\\d+),(\\d+):\\s+(info|warn|error):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "endLine": 4,
                        "endColumn": 5,
                        "severity": 6,
                        "message": 7
                    }
                ]
            }
        },
        {
            "taskName": "dev",
            "command": "./dev-test.sh",
            "args": [
                "${file}"
            ],
            "problemMatcher": {
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}/test"
                ],
                "pattern": [
                    {
                        // tests/simple-variables.l 9,1..9,21:
                        "regexp": "^([^<>].*):\\s+(\\d+),(\\d+)\\.\\.(\\d+),(\\d+):\\s+(info|warn|error):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "endLine": 4,
                        "endColumn": 5,
                        "severity": 6,
                        "message": 7
                    }
                ]
            }
        }
        
    ]
}