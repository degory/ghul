{
    "version": "0.1.0",
    "showOutput": "always",
    "tasks": [
        {
            "taskName": "build",
            "command": "ssh",
            "isBuildCommand": true,
            "args": [
                "lc.giantblob.com",
                "/build/source/rewrite/build.sh"
            ],
            "problemMatcher": {
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": [
                    {
                        "regexp": "^(.*):\\s+(\\d+):\\s+(warn|error):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "severity": 3,
                        "message": 4
                    }
                ]
            }
        },
        {
            "taskName": "test",
            "command": "ssh",
            "isTestCommand": true,
            "args": [
                "lc.giantblob.com",
                "/build/source/rewrite/test.sh"
            ],
            "problemMatcher": {
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": [
                    {
                        // tests/simple-variables.l 9,1..9,21:
                        "regexp": "^(.*):\\s+(\\d+),(\\d+)\\.\\.(\\d+),(\\d+):\\s+(info|warn|error):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "endLine": 4,
                        "endColumn": 5,
                        "severity": 6,
                        "message": 7
                    }
                ]
            }
        }
    ]
}