{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build compiler",
            "command": "./build/build.sh",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$ghul"
        },
        {
            "label": "Bootstrap compiler",
            "command": "./build/bootstrap.sh",
            "type": "shell",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Run all tests",
            "command": "./tests/test.sh",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Create new test",
            "group": "test",
            "command": "./tests/create.sh",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Edit all failed tests",
            "group": "test",
            "command": "./tests/edit-failed.sh",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}