{
    "version": "0.1.0",
    "showOutput": "always",
    "tasks": [
        {
            "taskName": "build",
            "command": "./dev-build.sh",
            "isBuildCommand": true,

// sudo chroot /mnt/llc-root/ su degory -c "cd /build/source/rewrite; ./build.sh"
            
            "args": [
            ],
            "problemMatcher": {
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": [
                    {
                        "regexp": "^(.*):\\s+(\\d+):\\s+(warn|error):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "severity": 3,
                        "message": 4
                    }
                ]
            }
        },
        {
            "taskName": "test",
            "command": "./dev-test.sh",
            "isTestCommand": true,
            "args": [
            ],
            "problemMatcher": {
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": [
                    {
                        // tests/simple-variables.l 9,1..9,21:
                        "regexp": "^(.*):\\s+(\\d+),(\\d+)\\.\\.(\\d+),(\\d+):\\s+(info|warn|error):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "endLine": 4,
                        "endColumn": 5,
                        "severity": 6,
                        "message": 7
                    }
                ]
            }
        }
    ]
}