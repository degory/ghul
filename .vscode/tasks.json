{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build compiler using installed ghul.exe",
            "command": "./build/build.sh",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$ghūl"
        },
        {
            "label": "Build compiler using local ghul.exe",
            "command": "GHUL=./ghul.exe ./build/build.sh",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$ghūl"
        },
        {
            "label": "Make installer",
            "command": "./build/build.sh && pushd ghul-test && ./build/build.sh && popd && ./build/make-installer.sh",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$ghūl"
        },
        {
            "label": "Install compiler",
            "command": "./installer/ghul.run",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$ghūl"
        },
        {
            "label": "Build and install compiler",
            "command": "./build/build-and-install.sh",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$ghūl"
        },
        {
            "label": "Bootstrap compiler",
            "command": "./build/bootstrap.sh",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$ghūl"
        },
        {
            "label": "AOT compile compiler",
            "command": "./build/aot.sh",
            "type": "shell",
            "group": "build",
        },
        {
            "label": "Build development container",
            "command": "docker build --no-cache . -f devcontainer.dockerfile -t ghul/devcontainer:local",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$ghūl"
        },
        {
            "label": "Run all tests",
            "command": "LC_COLLATE=C ghul-test tests",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Create new test",
            "group": "test",
            "command": "./tests/create.sh",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Edit all failed tests",
            "group": "test",
            "command": "./tests/edit-failed.sh",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}