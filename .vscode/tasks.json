{
    "version": "2.0.0",
    "options": {
        "env": {
            "LC_ALL": "C"
        },    
    },
    "tasks": [
        {
            "label": "Bump version number",
            "command": "build/bump-version.sh",
            "type": "shell",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": []
        },
        {
            "label": "Build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "dependsOn": "Bump version number",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": [
                "$gh큰l",
                "$msCompile"
            ]
        },
        {
            "label": "Pack",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "pack",
                "/property:ReleaseOption=\"--define release\"",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "dependsOn": [
                "Install release version",
                "Bump version number"
            ],
            "group": "test",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": [
                "$gh큰l",
                "$msCompile"
            ]
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "clean"
            ],
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": []
        },
        {
            "label": "Local package publish",
            "type": "shell",
            "command": "cp nupkg/ghul.compiler.$(build/get-version-number.sh).nupkg ~/src/packages",
            "group": "build",
            "dependsOn": [
                "Pack"
            ],
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": []
        },
        {
            "label": "Bootstrap",
            "type": "shell",
            "command": "./build/bootstrap.sh",
            "group": "test",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$gh큰l"
        },
        {
            "label": "Publish",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "publish",
                "--output",
                "publish/",
                "/property:ReleaseOption=\"--define release\"",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "dependsOn": [
                "Install release version"
            ],            
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": [
                "$gh큰l",
                "$msCompile"
            ]
        },
        {
            "label": "Build container",
            "type": "shell",
            "command": "docker",
            "args": [
                "build",
                "--no-cache",
                ".",
                "-f",
                "devcontainer-dotnet.dockerfile",
                "-t",
                "ghul/devcontainer:$(build/get-version-number.sh)"
            ],
            "presentation": {
                "reveal": "silent"
            },
            "dependsOn": [
                "Pack"
            ],
            "problemMatcher": []
        },
        {
            "label": "Install release version",
            "command": "build/install-release-compiler.sh",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": []
        },
        {
            "label": "Install development version",
            "command": "dotnet tool update --local ghul.compiler --add-source ./nupkg --version $(build/get-version-number.sh)",
            "type": "shell",
            "group": "build",
            "dependsOn": [
                "Pack"
            ],
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": []
        },
        {
            "label": "Uninstall",
            "type": "shell",
            "command": "build/uninstall.sh",
            "presentation": {
                "reveal": "never"
            },
            "problemMatcher": []
        },
        {
            "label": "Add Git hooks",
            "type": "shell",
            "command": ".git-hooks/install",
            "presentation": {
                "reveal": "silent"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },            
            "problemMatcher": []
        },
        {
            "label": "Run all integration tests",
            "type": "shell",
            "command": "dotnet ghul-test integration-tests",
            "group": "test",
            "dependsOn": [
                "Publish"
            ]
        },
        {
            "label": "Run failed integration tests",
            "type": "shell",
            "command": "./integration-tests/run-failed.sh",
            "group": "test",
            "dependsOn": [
                "Publish"
            ]
        },
        {
            "label": "Create new test",
            "type": "shell",
            "command": "./integration-tests/create.sh",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Edit all failed tests",
            "type": "shell",
            "command": "./integration-tests/edit-failed.sh",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}