namespace Tests.Enums is
    use Ghul;
    
    enum SUITS is
        CLUBS,
        DIAMONDS,
        HEARTS,
        SPADES
    si

    enum FLAGS is
        ONE = 1 << 0,
        TWO = 1 << 1,
        THREE = 1 << 2,
        FOUR = 1 << 3
    si

    class Main is
        test_s(s: SUITS) -> void is
            IO.Std.err.println("have " + cast int(s));
        si

        test_f(f: FLAGS) -> void is
            IO.Std.err.println("have " + cast int(f));
        si

        init() -> void is
            test_s(SUITS.CLUBS);
            test_s(SUITS.DIAMONDS);
            test_s(SUITS.HEARTS);
            test_s(SUITS.SPADES);

            test_f(FLAGS.ONE);
            test_f(FLAGS.TWO);
            test_f(FLAGS.THREE);
            test_f(FLAGS.FOUR);
        si
    si
si