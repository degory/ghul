{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run test",
            "command": "../../test.sh ${workspaceFolder}",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": "$ghul"
        },
        {
            "label": "Capture test expectation",
            "command": "../../../scripts/capture-task.sh",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}