namespace Semantic.Graph.Value is
    use System;

    use Generic;

    class BASE: Object, Semantic.Type.Typed is
        has_type: bool => false;

        type: Type.BASE is
            throw new NotImplementedException(Object.dump(self) + " has no type");
        si

        gen(context: IR.CONTEXT) is
            throw new NotImplementedException(Object.dump(self));
        si

        init() is si
    si

    /*
    class IR: BASE is
        value: IR.Value;
    si
    */

    class SKIP: BASE is
        init() is
            super.init();
        si
    si

    class NEW: BASE is
        has_type: bool => type?;
        type: Type.BASE;
        constructor: Symbol.Function;
        arguments: Iterable[BASE];

        init(
            type: Type.BASE,
            constructor: Symbol.Function,
            arguments: Iterable[BASE]
        ) is
            super.init();

            self.type = type;
            self.constructor = constructor;
            self.arguments = arguments;
        si

        gen(context: IR.CONTEXT) is
        si

        toString() -> String =>
            "new:[[" + type + "](\"" + constructor.name + "\"," + arguments + ")";
    si

    class CAST: BASE is
        has_type: bool => type?;
        type: Type.BASE;
        value: BASE;

        init(
            type: Type.BASE,
            value: BASE
        ) is
            super.init();

            self.type = type;
            self.value = value;
        si

        gen(context: IR.CONTEXT) is
        si

        toString() -> String =>
            "cast:[" + type + "](" + value + ")";
    si

