    si

    namespace Need is
        class STORE: BASE is
            has_type: bool => value? && value.has_type;
            type: Type.BASE => value.type;
            value: BASE;

            init(value: BASE) is
                super.init();

                self.value = value;
            si

            toString() -> String =>
                "need-store:[" + type + "]";
        si
    si

    namespace Expect is
        class STORABLE: BASE is
            has_type: bool => type?;
