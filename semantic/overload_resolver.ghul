                    for i in 0..f.arguments.Length-1 do
                        var match = f.arguments[i] =~ arguments[i];

                        if !match then
                            found = false;
                            break;
                        fi
                    od

                    if found then
                        return f;
                    fi
                fi
            od

            return null;
