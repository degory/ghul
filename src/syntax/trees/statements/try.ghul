namespace Syntax.Trees.Statements is
    use Source;
        
    class TRY: Statement  is
        expression: Expressions.Expression;
        body: LIST;
        catches: Collections.LIST[CATCH];
        `finally: LIST;

        init(
            location: LOCATION,
            body: LIST, catches: Collections.LIST[CATCH],
            `finally: LIST
        )
        is
            super.init(location);

            self.body = body;
            self.catches = catches;
            self.`finally = `finally;
        si

        accept(visitor: Visitor) is
            visitor.visit(self);
        si

        walk(visitor: Visitor) is
            if !visitor.pre(self) then
                body.walk(visitor);

                for c in catches do
                    c.walk(visitor);
                od

                if `finally? then
                    `finally.walk(visitor);
                fi
            fi
            accept(visitor);
        si
    si

    class CATCH: Statement  is
        variable: Variables.Variable;
        body: LIST;

        init(location: LOCATION, variable: Variables.Variable, body: LIST) is
            super.init(location);

            self.variable = variable;
            self.body = body;
        si

        accept(visitor: Visitor) is
            visitor.visit(self);
        si

        walk(visitor: Visitor) is
            if !visitor.pre(self) then
                variable.walk(visitor);
                body.walk(visitor);
            fi

            accept(visitor);
        si
    si
si
