namespace Syntax.Tree.Statement is
    use Source;

    use Generic;

    class CASE: NODE is
        expression: Expression.NODE;
        matches: List[CASE_MATCH];
        
        init(location: LOCATION, expression: Expression.NODE, matches: List[CASE_MATCH]) is
            super.init(location);
            self.expression = expression;
            self.matches = matches;
        si

        accept(visitor: Visitor) is
            visitor.visit(self);
        si

        walk(visitor: Visitor) is
            if !visitor.pre(self) then
                expression.walk(visitor);
                for m in matches do
                    m.walk(visitor);
                od
            fi

            accept(visitor);
        si

    si

    class CASE_MATCH: NODE is
        expressions: Expression.LIST;
        statements: LIST;

        init(location: LOCATION, expressions: Expression.LIST, statements: LIST) is
            super.init(location);

            self.expressions = expressions;
            self.statements = statements;
        si

        accept(visitor: Visitor) is
            visitor.visit(self);
        si

        walk(visitor: Visitor) is
            if !visitor.pre(self) then
                if expressions? then
                    expressions.walk(visitor);
                fi
                
                statements.walk(visitor);
            fi

            accept(visitor);
        si
    si
