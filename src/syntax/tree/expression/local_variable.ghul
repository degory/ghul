namespace Syntax.Tree.Expression is
    use System;
    
    use Source;

    class LOCAL_VARIABLE: NODE  is
        name: String;

        init(
            location: LOCATION,
            name: String
        )
        is
            super.init(location);

            self.name = name;
        si

        accept(visitor: Visitor) is
            visitor.visit(self);
        si

        walk(visitor: Visitor) is
            accept(visitor);
        si
    si
si
