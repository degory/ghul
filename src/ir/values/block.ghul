namespace IR.Values is
    use TypeTyped = Semantic.Types.Typed;
    use Semantic.Types.Type;

    class BLOCK: Value, TypeTyped is
        _emitted: bool;

        has_type: bool => type?;
        type: Type;

        block: string;

        init(type: Type) is
            super.init();

            assert type?;

            self.type = type;
        si

        init(
            type: Type,
            block: string
        ) is
            super.init();

            assert type?;
            assert block?;

            self.type = type;
            self.block = block;
        si

        set_block(block: string) is
            self.block = block;
        si

        gen(context: IR.CONTEXT) is
            assert !self._emitted else "oops: block value already emitted";

            context.write(self.block);

            _emitted = true;
        si

        to_string() -> string =>
            "block:[" + type + "](" + block + ")";
    si
si