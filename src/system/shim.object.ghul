namespace Shim is
    use System.Object;
    use System.String;

    class OBJ is
        @IF.legacy()
        type_name(value: Object) -> String is
            if !value? then
                return "null";
            else
                return value.ClassName;
            fi
        si
        
        @IF.dotnet()
        type_name(value: Object) -> String is
            if !value? then
                return "null";
            else
                return value.get_type().to_string();
            fi
        si

        @IF.legacy()
        to_string(value: Object) -> String is
            if !value? then
                return "null";
            else
                return value.toString();
            fi
        si
        
        @IF.dotnet()
        to_string(value: Object) -> String is
            if !value? then
                return "null";
            else
                return value.to_string();
            fi
        si

        @IF.legacy()
        hash(value: Object) -> int => value.hash();
        
        @IF.dotnet()
        hash(value: Object) -> int => value.get_hash_code();

        @IF.legacy()
        clone(value: Object) -> Object => value.clone();
        
        @IF.dotnet()
        clone(value: Object) -> Object => value.memberwise_clone();

    si
si
