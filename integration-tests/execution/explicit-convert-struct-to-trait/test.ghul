use System.Exception;
use IO.Std.write_line;

class THING is
    init() is        
    si
si

trait GetAThing is
    get_a_thing() -> THING;
si

struct STRUCT_THINGER: GetAThing is
    name: string;

    init(name: string) is
        self.name = name;
    si
    
    get_a_thing() -> THING => new THING();

    to_string() -> string => name;
si

test_boxing_of_value_types_if_converting_to_an_implemented_interface_explicit() is
    let s = new STRUCT_THINGER("hello");

    let t: GetAThing;
    
    t = cast GetAThing(s);

    write_line("result is: " + t.get_a_thing());
si

entry() is
    test_boxing_of_value_types_if_converting_to_an_implemented_interface_explicit();
si