use System.Exception;
use IO.Std.write_line;

class THING is
    init() is        
    si
si

trait GetAThing is
    get_a_thing() -> THING;
si

struct STRUCT_THINGER: GetAThing is
    name: string;

    init(name: string) is
        self.name = name;
    si
    
    get_a_thing() -> THING => THING();

    to_string() -> string => name;
si

test_convert_of_object_to_interface() is
    let s = STRUCT_THINGER("hello");

    let o: object;
    let t: GetAThing;

    o = s;

    @IL.output("il.out")
    t = cast GetAThing(o);

    write_line("result is: " + t.get_a_thing());
si

test_convert_of_object_to_struct() is
    let s = STRUCT_THINGER("hello");

    let o: object;
    let t: STRUCT_THINGER;

    o = s;

    @IL.output("il.out")
    t = cast STRUCT_THINGER(o);

    write_line("result is: " + t.get_a_thing());
si

