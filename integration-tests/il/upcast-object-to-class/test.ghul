trait GetAThing is
    get_a_thing() -> THING;
si

class THINGER: GetAThing is
    name: string;

    init(name: string) is
        self.name = name;
    si
    
    get_a_thing() -> THING => new THING();

    to_string() -> string => name;
si

test_upcasting_of_object_to_class() is
    let s = new THINGER("hello");

    let o: object;
    let t: GetAThing;

    o = s;

    @IL.output("il.out")
    t = cast THINGER(o);

    write_line("result is: " + t.get_a_thing());
si


