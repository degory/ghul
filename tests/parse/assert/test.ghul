namespace Test is
    use System.Exception;

    use Std = IO.Std;

    class Main is
        entry() static is
            

            let x: string;
            let y: bool;

            assert x?;

            assert x? /\ !y;

            assert true;

            assert false else new Exception("oops");

            assert true else "something went wrong";

            assert check_something() \/ check_something_else(1, 2) /\ !check_something_else(3, 2) else log_error("oops");

            return;
        si

        check_something() -> bool static => true;

        check_something_else(i: int, j: int) -> bool static => true; 

        log_error(message: string) -> Exception static => new Exception(message);        
    si
si