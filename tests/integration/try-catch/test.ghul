namespace Test is
    use System.String;
    use System.Console;
    use System.Exception;

    class Main is
        entry() static is
            @IL.entrypoint()

            test("expect nothing", null);

            test("expect my exception catch", new MyException("my exception"));

            test("expect other exception catch", new Exception("system exception"));

            test("expect other exception catch", new System.BoundsException("bounds exception"));
        si

        test(message: String, ex: Exception) static is
            Console.write_line("before: " + message);

            try
                Console.write_line("start: " + message);

                if ex? then
                    Console.write_line("will throw: " + ex.get_type().name);

                    throw ex;

                    Console.write_line("should not be reachable");
                else
                    Console.write_line("will not throw");                    
                fi
                
            catch ex: MyException
                Console.write_line("caught my exception: " + ex.message);

            catch ex: Exception
                Console.write_line("caught other exception: " + ex.message);

            yrt

            Console.write_line("after: " + message);
        si        
    si

    class MyException: Exception is
        init(message: String) is
            super.init(message);
        si
    si    
si