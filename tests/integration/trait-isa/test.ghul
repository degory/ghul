namespace Test is

    class OTHER_THING: THING is
        init() is si        
    si

    class DERIVED_THING: THING is
        init() is si        
    si

    class THING: DoStuff, SettableProperty is
        value: int;
        init() is si
        do_stuff(stuff: int) -> int is
            System.Console.write_line("do stuff: " + stuff);

            return stuff;
        si    
    si
    
    class DO_STUFF: DoStuff is
        init() is si
        do_stuff(stuff: int) -> int is
            System.Console.write_line("do stuff: " + stuff);

            return stuff;
        si    
    si    

    trait DoStuff is
        do_stuff(stuff: int) -> int;
    si

    trait ReadableProperty is
        value: int;
    si

    trait SettableProperty: ReadableProperty is
        value: int, = value;
    si

    class Main is
        entry() static is
            @IL.entrypoint()

            let ds = new THING();

            System.Console.write_line("have a: " + ds);
            System.Console.write_line("ds isa DO_STUFF: " + isa DO_STUFF(ds));
            System.Console.write_line("ds isa DoStuff: " + isa DoStuff(ds));
            System.Console.write_line("ds isa ReadableProperty: " + isa ReadableProperty(ds));
            System.Console.write_line("ds isa SettableProperty: " + isa SettableProperty(ds));

            let dt = new DERIVED_THING();

            System.Console.write_line("have a: " + dt);
            System.Console.write_line("ds isa DO_STUFF: " + isa DO_STUFF(dt));
            System.Console.write_line("ds isa DoStuff: " + isa DoStuff(dt));
            System.Console.write_line("ds isa ReadableProperty: " + isa ReadableProperty(dt));
            System.Console.write_line("ds isa SettableProperty: " + isa SettableProperty(dt));

            let ot = new DERIVED_THING();

            System.Console.write_line("have a: " + ot);
            System.Console.write_line("ds isa DO_STUFF: " + isa DO_STUFF(ot));
            System.Console.write_line("ds isa DoStuff: " + isa DoStuff(ot));
            System.Console.write_line("ds isa ReadableProperty: " + isa ReadableProperty(ot));
            System.Console.write_line("ds isa SettableProperty: " + isa SettableProperty(ot));
        si
    si
si