namespace Test is
    @IF.not.v3()
    use Std = System.Console;
    @IF.not.v3()
    use object = System.Object;
    @IF.not.v3()
    use string = System.String;

    @IF.v3()
    use Std = IO.Std;

    class Main is
        entry() static is
            @IL.entrypoint()

            let base = new BASE();

            let derived = new DERIVED();

            base.test();

            derived.test();

            base = derived;

            base.test();
        si
    si

    class BASE is
        init() is si
        
        test() is
            Std.out.write_line("hello from BASE");
        si
    si

    class DERIVED: BASE is
        init() is si

        test() is
            Std.out.write_line("hello from DERIVED");
        si
    si
si

