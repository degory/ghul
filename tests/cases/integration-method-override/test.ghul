namespace Test is
    class Main is
        init() static is
            @IL.entrypoint()

            let base = new BASE();

            let derived = new DERIVED();

            base.test();

            derived.test();

            base = derived;

            base.test();
        si
    si

    class BASE is
        init() is si
        
        test() is
            System.Console.write_line("hello from BASE");
        si
    si

    class DERIVED: BASE is
        init() is si

        test() is
            System.Console.write_line("hello from DERIVED");
        si
    si
si

