namespace Test is
    use System.Console;

    class Main is
        entry() static is
            @IL.entrypoint()

            let c = new COUNTER();

            for v in 1::5 do
                Console.write_line("will increment " + c.count + " by " + v + "...");

                c.increment(v);

                Console.write_line("count is now: " + c.count);
            od
        si
    si

    struct COUNTER is
        count: int;

        init() is
        si        

        increment(by: int) is
            count = count + by;
        si
    si
    
