namespace Test is
    class Main is
        entry() static is
            @IL.entrypoint()

            let base = new BASE(111);

            let derived = new DERIVED(222);

            let base_copy = base.copy();
            System.Console.write_line("base copy: " + base_copy);

            base_copy.value = 333;
            System.Console.write_line("base copy altered: " + base_copy);

            System.Console.write_line("base original: " + base);

            let derived_copy = derived.copy();
            System.Console.write_line("derived copy: " + derived_copy);

            derived_copy.value = 444;
            System.Console.write_line("derived copy altered: " + derived_copy);

            System.Console.write_line("derived original: " + derived);

            base = derived_copy;

            let derived_copy_copy = base.copy();
            System.Console.write_line("derived copy copy: " + derived_copy_copy);

            test(1, base);
            test(2, base_copy);
            test(3, derived);
            test(4, derived_copy);
            test(5, derived_copy_copy);
        si

        test(value: int, original: BASE) static is
            System.Console.write_line();
            System.Console.write_line("start test: value: " + value + " type: " + original.get_type().name);
            original.value = value;
            System.Console.write_line("original: " + original + " expect: " + value);

            original.value = value + 100;
            System.Console.write_line("original altered: " + original + " expect: " + (value + 100));

            let copy = original.copy();
            System.Console.write_line("copy: " + copy + " expect: " + value);

            original.value = original.value + 100;
            System.Console.write_line("original altered again: " + original + " expect: " + (value + 200));

            System.Console.write_line("copy: " + copy + " expect: " + value);

            copy.value = copy.value + 50;
            System.Console.write_line("copy altered: " + copy + " expect: " + (value + 150));

            System.Console.write_line("original: " + original + " expect: " + (value + 200));
        si        
    si

    class BASE is
        value: int public;

        init(value: int) is
            self.value = value;    
        si
        
        copy() -> BASE is
            System.Console.write_line("will copy BASE");

            return cast BASE(self.memberwise_clone());
        si

        @IL.name("ToString")
        to_string() -> System.String => get_type().name + " " + value;
    si

    class DERIVED: BASE is
        init(value: int) is
            super.value = value;
        si

        copy() -> DERIVED is
            System.Console.write_line("will copy DERIVED");

            return cast DERIVED(self.memberwise_clone());
        si
    si
si

