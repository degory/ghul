namespace Test is
    class Main is
        entry() static is
            @IL.entrypoint()

            let thing = new Thing(2);

            let sum_function = thing.create_sum_function();

            System.Console.write_line("call sum directly on 444 and 222 " + sum_function(444,222));

            thing.call_test_function("sum", sum_function);

            let difference_function = thing.create_difference_function();

            System.Console.write_line("call difference directly on 444 and 222 " + difference_function(444,222));
            
            thing.call_test_function("difference", difference_function);

            let double_sum_function = thing.create_double_sum_function();

            System.Console.write_line("call doubled sum directly on 444 and 222 " + double_sum_function(444,222));

            thing.call_test_function("double sum", double_sum_function);
        si
    si

    class Thing is
        scale: int;

        init(scale: int) is
            self.scale = scale;
        si

        create_sum_function() -> (int,int) -> int is
            let result = (i: int, j: int) -> int is
                return i + j;
            si;

            return result;
        si

        create_difference_function() -> (int,int) -> int =>
            (i: int, j: int) -> int => i - j;

        // captures self:
        create_double_sum_function() -> (int, int) -> int =>
            (i: int, j: int) -> int => scale * (i + j);

        call_test_function(
            name: System.String,
            function: (int, int) -> int)
        is
            System.Console.write_line("call function from another class...");

            let result = function(333, 222);

            System.Console.write_line("apply " + name + " to 333 and 222 gives result " + result);
        si        
    si
si
