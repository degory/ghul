{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run test",
            "command": "echo host is ${env:HOST} target is ${env:TARGET} ; HOST=\"${env:HOST}\" TARGET=\"${env:TARGET}\" ../../../ghul test.ghul -p ../../../lib",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Capture test expectation",
            "command": "../../../tasks/capture.sh ${workspaceFolder}",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}