namespace Test is
    class Main is
        entry() static is
            @IL.entrypoint()

            // TODO: these are quite limited in their behaviour compared to the L ones - L ranges are bi-directional
            // and their constructors pick the right direction based the arguments:

            for j in -1 .. 2 do

                for i in j .. -10 do
                    System.Console.write_line("not expected: decending range: " + j + ".." + -10);
                od

                for i in -5 .. j do
                    System.Console.write_line("expecting " + -5 + ".." + j + ": " + i);
                od

                for i in -5 :: j do
                    System.Console.write_line("expecting " + -5 + "::" + j + ": " + i);
                od

                for i in j .. 10 do
                    System.Console.write_line("expecting " + j + ".." + 10 + ": " + i);
                od
                            
                for i in j :: 10 do
                    System.Console.write_line("expecting " + j + "::" + 10 + ": " + i);
                od
            od
            return;
        si
    si
